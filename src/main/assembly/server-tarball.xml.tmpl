<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>graylog</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <moduleSets>
        <moduleSet>
            <includes>
                <include>org.graylog2:graylog2-server</include>
            </includes>
            <binaries>
                <attachmentClassifier>graylog-server-tarball</attachmentClassifier>
                <includeDependencies>false</includeDependencies>
                <unpack>true</unpack>
            </binaries>
        </moduleSet>

        {{ range $assembly := index .Assemblies "graylog" }}
        <moduleSet>
            <includeSubModules>true</includeSubModules>
            <includes>
                <include>{{ $assembly }}</include>
            </includes>
            <binaries>
            {{ if $assembly.Attachment }}
                <attachmentClassifier>{{ $assembly.Attachment }}</attachmentClassifier>
                <includeDependencies>false</includeDependencies>
                <unpack>true</unpack>
            {{ else }}
                <includeDependencies>false</includeDependencies>
                <outputDirectory>plugin</outputDirectory>
                <unpack>false</unpack>
            {{ end }}
            </binaries>
        </moduleSet>
        {{ end }}
    </moduleSets>
</assembly>
